# ========================
# ShopTalk-AI 智能客服系统核心配置文件
# ========================
# 注意：AI模型、电商平台、智能体等配置已迁移到数据库管理
# 请使用系统配置管理页面进行配置

# ===== 基础配置 =====
DEBUG=True
SECRET_KEY=your-secret-key-here-change-in-production
ALLOWED_HOSTS=localhost,127.0.0.1,*
TIME_ZONE=Asia/Shanghai
LANGUAGE_CODE=zh-hans

# ===== 数据库配置 =====
# PostgreSQL 主数据库
DB_ENGINE=django.db.backends.postgresql
DB_NAME=shoptalk_ai
DB_USER=postgres
DB_PASSWORD=your-password
DB_HOST=localhost
DB_PORT=5432

# Redis 缓存和消息队列
REDIS_URL=redis://localhost:6379/1
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# ===== Web服务配置 =====
# CORS跨域配置
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,http://localhost:8080,http://localhost:5173

# 静态文件配置
STATIC_URL=/static/
STATIC_ROOT=./staticfiles/
MEDIA_URL=/media/
MEDIA_ROOT=./media/

# ===== 文件存储配置 =====
# 本地存储
DEFAULT_FILE_STORAGE=django.core.files.storage.FileSystemStorage

# 云存储（可选）
USE_CLOUD_STORAGE=False
CLOUD_STORAGE_TYPE=aliyun_oss
ALIYUN_OSS_ACCESS_KEY_ID=
ALIYUN_OSS_ACCESS_KEY_SECRET=
ALIYUN_OSS_BUCKET_NAME=
ALIYUN_OSS_ENDPOINT=

# ===== 监控和日志配置 =====
# 日志级别
LOG_LEVEL=INFO
LOG_FILE=./logs/shoptalk.log
LOG_MAX_SIZE=50MB
LOG_BACKUP_COUNT=5

# 性能监控
ENABLE_METRICS=True
METRICS_PORT=8090

# 错误报告
SENTRY_DSN=
SENTRY_ENVIRONMENT=development

# ===== 安全配置 =====
# 加密
ENCRYPTION_KEY=your-encryption-key-32-chars
JWT_SECRET_KEY=your-jwt-secret-key

# 访问控制
RATE_LIMIT_ENABLED=True
MAX_REQUESTS_PER_MINUTE=60

# ===== 邮件配置 =====
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-email-password

# ===== 任务队列配置 =====
CELERY_TASK_ALWAYS_EAGER=False
CELERY_TASK_SERIALIZER=json
CELERY_RESULT_SERIALIZER=json
CELERY_ACCEPT_CONTENT=['json']
CELERY_TIMEZONE=Asia/Shanghai

# ===== 开发配置 =====
# 开发工具
DJANGO_DEBUG_TOOLBAR=True
DJANGO_EXTENSIONS=True

# 测试配置
TESTING=False
TEST_RUNNER=django.test.runner.DiscoverRunner

# ===== 生产环境配置 =====
# WSGI服务器
WSGI_APPLICATION=backend.core.wsgi.application

# 缓存配置
CACHE_BACKEND=django_redis.cache.RedisCache
CACHE_LOCATION=redis://localhost:6379/2
CACHE_TIMEOUT=300

# 会话配置
SESSION_ENGINE=django.contrib.sessions.backends.cache
SESSION_CACHE_ALIAS=default
SESSION_COOKIE_AGE=86400

# ===== 集成服务配置 =====
# RAGFlow配置
RAGFLOW_BASE_URL=http://localhost:9380
RAGFLOW_API_KEY=your-ragflow-api-key

# Langflow配置
LANGFLOW_BASE_URL=http://localhost:7860
LANGFLOW_API_KEY=your-langflow-api-key 