# ========================
# ShopTalk-AI 智能客服系统统一配置文件
# ========================

# ===== 基础配置 =====
DEBUG=True
SECRET_KEY=your-secret-key-here-change-in-production
ALLOWED_HOSTS=localhost,127.0.0.1,*
TIME_ZONE=Asia/Shanghai
LANGUAGE_CODE=zh-hans

# ===== 数据库配置 =====
# PostgreSQL 主数据库
DB_ENGINE=django.db.backends.postgresql
DB_NAME=shoptalk_ai
DB_USER=postgres
DB_PASSWORD=your-password
DB_HOST=localhost
DB_PORT=5432

# Redis 缓存和消息队列
REDIS_URL=redis://localhost:6379/1
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# ===== Web服务配置 =====
# CORS跨域配置
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,http://localhost:8080,http://localhost:5173

# 静态文件配置
STATIC_URL=/static/
STATIC_ROOT=./staticfiles/
MEDIA_URL=/media/
MEDIA_ROOT=./media/

# ===== AI模型配置 =====
# OpenAI
OPENAI_API_KEY=your-openai-api-key
OPENAI_BASE_URL=https://api.openai.com/v1
OPENAI_MODEL=gpt-3.5-turbo

# Anthropic Claude
ANTHROPIC_API_KEY=your-anthropic-api-key
ANTHROPIC_MODEL=claude-3-sonnet-20240229

# 智谱AI
ZHIPU_API_KEY=your-zhipu-api-key
ZHIPU_MODEL=glm-4

# 阿里通义千问
QWEN_API_KEY=your-qwen-api-key
QWEN_MODEL=qwen-turbo

# 百度文心一言
ERNIE_API_KEY=your-ernie-api-key
ERNIE_SECRET_KEY=your-ernie-secret-key

# 本地AI模型
LOCAL_AI_ENABLED=False
LOCAL_AI_URL=http://localhost:11434

# ===== 电商平台配置 =====
# 淘宝
TAOBAO_ENABLED=True
TAOBAO_USERNAME=your-taobao-username
TAOBAO_PASSWORD=your-taobao-password

# 京东
JINGDONG_ENABLED=True
JINGDONG_USERNAME=your-jd-username
JINGDONG_PASSWORD=your-jd-password

# 拼多多
PINDUODUO_ENABLED=True
PINDUODUO_USERNAME=your-pdd-username
PINDUODUO_PASSWORD=your-pdd-password

# ===== 社交平台配置 =====
# 小红书
XIAOHONGSHU_ENABLED=True
XIAOHONGSHU_USERNAME=your-xhs-username
XIAOHONGSHU_PASSWORD=your-xhs-password

# 抖音
DOUYIN_ENABLED=True
DOUYIN_USERNAME=your-dy-username
DOUYIN_PASSWORD=your-dy-password

# 微信
WECHAT_ENABLED=False
WECHAT_APP_ID=your-wechat-app-id
WECHAT_APP_SECRET=your-wechat-app-secret

# ===== 浏览器自动化配置 =====
BROWSER_HEADLESS=True
BROWSER_USER_DATA_DIR=./browser_data
ANTI_DETECTION_ENABLED=True

# 代理配置
PROXY_ENABLED=False
HTTP_PROXY=
HTTPS_PROXY=

# 指纹浏览器
ADSPOWER_ENABLED=False
ADSPOWER_API_URL=http://localhost:50325
ADSPOWER_GROUP_ID=0

# ===== 知识库配置 =====
# 向量数据库
VECTOR_DB_TYPE=faiss
VECTOR_DB_URL=
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
EMBEDDING_DIMENSION=384

# RAGFlow集成
RAGFLOW_ENABLED=False
RAGFLOW_API_URL=http://localhost:9380
RAGFLOW_API_KEY=your-ragflow-api-key

# ===== 智能体配置 =====
# 情感分析
SENTIMENT_ENABLED=True
SENTIMENT_MODEL=transformer
SENTIMENT_THRESHOLD=0.7

# 意图识别
INTENT_RECOGNITION_ENABLED=True
INTENT_MODEL=bert-base-chinese

# 多媒体处理
OCR_ENABLED=True
OCR_MODEL=paddleocr
VIDEO_TRANSCRIPT_ENABLED=False
SPEECH_TO_TEXT_ENABLED=True

# ===== 监控和日志配置 =====
# 日志级别
LOG_LEVEL=INFO
LOG_FILE=./logs/shoptalk.log
LOG_MAX_SIZE=50MB
LOG_BACKUP_COUNT=5

# 性能监控
ENABLE_METRICS=True
METRICS_PORT=8090

# 错误报告
SENTRY_DSN=
SENTRY_ENVIRONMENT=development

# ===== 安全配置 =====
# 加密
ENCRYPTION_KEY=your-encryption-key-32-chars
JWT_SECRET_KEY=your-jwt-secret-key

# 访问控制
RATE_LIMIT_ENABLED=True
MAX_REQUESTS_PER_MINUTE=60

# ===== 邮件配置 =====
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-email-password

# ===== 文件存储配置 =====
# 本地存储
DEFAULT_FILE_STORAGE=django.core.files.storage.FileSystemStorage

# 云存储（可选）
USE_CLOUD_STORAGE=False
CLOUD_STORAGE_TYPE=aliyun_oss
ALIYUN_OSS_ACCESS_KEY_ID=
ALIYUN_OSS_ACCESS_KEY_SECRET=
ALIYUN_OSS_BUCKET_NAME=
ALIYUN_OSS_ENDPOINT=

# ===== 任务队列配置 =====
CELERY_TASK_ALWAYS_EAGER=False
CELERY_TASK_SERIALIZER=json
CELERY_RESULT_SERIALIZER=json
CELERY_ACCEPT_CONTENT=['json']
CELERY_TIMEZONE=Asia/Shanghai

# ===== 开发配置 =====
# 开发工具
DJANGO_DEBUG_TOOLBAR=True
DJANGO_EXTENSIONS=True

# 测试配置
TESTING=False
TEST_RUNNER=django.test.runner.DiscoverRunner

# ===== 生产环境配置 =====
# WSGI服务器
WSGI_APPLICATION=backend.core.wsgi.application

# 缓存配置
CACHE_BACKEND=django_redis.cache.RedisCache
CACHE_LOCATION=redis://localhost:6379/2
CACHE_TIMEOUT=300

# 会话配置
SESSION_ENGINE=django.contrib.sessions.backends.cache
SESSION_CACHE_ALIAS=default
SESSION_COOKIE_AGE=86400 